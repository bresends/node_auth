{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2020",
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": ["./src/@types"],
        "paths": {
            "@/*": ["./src/*"],
        }
    },
    "include": ["./src/**/*"]
}
